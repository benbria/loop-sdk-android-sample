<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.benbria.loopandroidrefapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".LoopApplication"
        android:allowBackup="true"
        android:icon="@drawable/benbria_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/benbria_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Loopandroidrefapp">
        <activity android:name=".main.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.WebViewActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>